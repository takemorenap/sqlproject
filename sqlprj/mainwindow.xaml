<Window x:Class="sqlprj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sqlprj"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="250">
    <Grid>
        <Label Content="用户名" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="54,74,0,0"/>
        <Label Content="密码" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="54,124,0,0"/>
        <Label Content="请输入用户名和密码" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0"/>
        <TextBox TextAlignment="Left" FontSize="14" Name="username" Height="26" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="105,74,0,0" HorizontalAlignment="Left" Width="80"/>
        <PasswordBox  FontSize="14" Name="password" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="80" Margin="105,124,0,0"/>
        <Button Name="login" Content="登陆" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="84,195,0,0" Click="Login_Click" IsDefault="True"/>

    </Grid>
</Window>
